# Bezpečnostní nastavení pro Ráj mazlíčků
# Ochrana citlivých souborů a konfigurací

# Zakázat přístup k citlivým souborům
<Files "config.js">
    Order allow,deny
    Deny from all
</Files>

<Files "*.php">
    # Povolit pouze POST požadavky na send-email*.php
    <Files "send-email*.php">
        <LimitExcept POST>
            Order allow,deny
            Deny from all
        </LimitExcept>
    </Files>
</Files>

# Zakázat přístup k log souborům
<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

# Zakázat přístup k .htaccess a .htpasswd
<Files ".ht*">
    Order allow,deny
    Deny from all
</Files>

# Zakázat přístup k vendor složce (pokud existuje)
<Directory "vendor">
    Order allow,deny
    Deny from all
</Directory>

# Zakázat přístup k composer souborům
<Files "composer.*">
    Order allow,deny
    Deny from all
</Files>

# Bezpečnostní hlavičky
<IfModule mod_headers.c>
    # Zakázat zobrazování verze PHP
    Header unset X-Powered-By
    
    # Nastavit Content Security Policy
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://unpkg.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self';"
    
    # Nastavit X-Frame-Options
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Nastavit X-Content-Type-Options
    Header set X-Content-Type-Options "nosniff"
    
    # Nastavit Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Přidat favicon hlavičku pro všechny stránky
    Header always set Link "</zvirata-bile.png>; rel=icon; type=image/png"
    
    # Přidat cache hlavičky pro favicon
    <Files "zvirata-bile.png">
        Header set Cache-Control "public, max-age=31536000"
        Header set Expires "Thu, 31 Dec 2025 23:59:59 GMT"
    </Files>
</IfModule>

# Zakázat directory browsing
Options -Indexes

# Zakázat přístup k souborům s určitými příponami
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|swp|tmp)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Povolit pouze potřebné HTTP metody
<LimitExcept GET POST>
    Order allow,deny
    Deny from all
</LimitExcept>

# URL Rewriting - odstranění .html přípon
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Nastavit base URL (důležité pro mobilní zařízení)
    RewriteBase /
    
    # Nechat statické soubory projít bez zpracování
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule \.(png|jpg|jpeg|gif|svg|ico|css|js|woff|woff2|ttf|eot)$ - [L]
    
    # Přesměrovat / na index.html
    RewriteRule ^$ index.html [L]
    
    # Pravidla pro favicon - načítat z kořenového adresáře
    RewriteRule ^favicon\.ico$ zvirata-bile.png [L]
    RewriteRule ^favicon\.png$ zvirata-bile.png [L]
    RewriteRule ^zvirata-bile\.png$ zvirata-bile.png [L]
    RewriteRule ^apple-touch-icon\.png$ zvirata-bile.png [L]
    RewriteRule ^apple-touch-icon-precomposed\.png$ zvirata-bile.png [L]
    RewriteRule ^apple-touch-icon-(\d+x\d+)\.png$ zvirata-bile.png [L]
    
    # Pravidla pro různé velikosti favicon
    RewriteRule ^favicon-(\d+x\d+)\.png$ zvirata-bile.png [L]
    RewriteRule ^icon-(\d+x\d+)\.png$ zvirata-bile.png [L]
    
    # Pravidlo pro favicon na všech stránkách bez .html
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([^/]+)/?$ $1.html [L]
    
    # Specifická pravidla pro podstránky ve složce stranka/
    RewriteRule ^akvaterachodov/?$ stranka/akvaterachodov.html [L]
    RewriteRule ^akvateracheb/?$ stranka/akvateracheb.html [L]
    
    # Pravidla pro pobočky (bez .html přípon)
    RewriteRule ^chodov/?$ chodov.html [L]
    RewriteRule ^cheb/?$ cheb.html [L]
    RewriteRule ^karlovy-vary/?$ karlovy-vary.html [L]
    
    # Pravidla pro ostatní stránky
    RewriteRule ^aktuality/?$ aktuality.html [L]
    RewriteRule ^vop/?$ vop.html [L]
    RewriteRule ^podminky-smecka/?$ podminky-smecka.html [L]
    RewriteRule ^registrace-smecka/?$ registrace-smecka.html [L]
    RewriteRule ^gdpr/?$ gdpr.html [L]
    RewriteRule ^dashboard/?$ dashboard.html [L]
    RewriteRule ^test/?$ test.html [L]
    RewriteRule ^website/?$ website.html [L]
    
    # Přesměrování starých .html URL na nové bez přípon (301 redirect)
    RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
    RewriteRule ^ /%1 [R=301,L]
</IfModule>

# Fallback pravidla pro případ, že mod_rewrite není dostupný
<IfModule !mod_rewrite.c>
    # Přesměrovat na .html soubory pomocí ErrorDocument
    ErrorDocument 404 /404.html
</IfModule>

# Nastavení MIME typů
<IfModule mod_mime.c>
    AddType text/html .html
    AddType text/css .css
    AddType application/javascript .js
    AddType image/png .png
    AddType image/jpeg .jpg .jpeg
    AddType image/gif .gif
    AddType image/svg+xml .svg
</IfModule>

# Zpracování chyb
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Fallback pravidla pro případ, že mod_rewrite není dostupný
<IfModule !mod_rewrite.c>
    # Přesměrovat na .html soubory pomocí ErrorDocument
    ErrorDocument 404 /404.html
</IfModule>
